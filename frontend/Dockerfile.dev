FROM node:22-slim

WORKDIR /app

# Install dependencies for canvas
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    make \
    g++ \
    build-essential \
    pkg-config \
    libcairo2-dev \
    libpango1.0-dev \
    libjpeg-dev \
    libgif-dev \
    librsvg2-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./

# Copy all files
COPY . .

# Expose port
EXPOSE 3000

# Install dependencies and start in development mode  
CMD ["sh", "-c", "npm install -g napi-postinstall && npm install --legacy-peer-deps --force && npm run dev"]